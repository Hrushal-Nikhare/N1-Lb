---
interface Props {
	position: string;
	player: string;
	stat: string;
}
var { position, player, stat } = Astro.props;
---

<div class="fancy">
	<h1>{position}</h1>
	<div class="medal"></div>
	<h1>{player}</h1>

	<div class="right">
		<h1 class="stat">{stat}</h1>
	</div>
</div>
<div
	style="width: 100%; height: 2px; background: rgba(255, 255, 255, 0.6); overflow: hidden;"
>
</div>

<style>
	.stat {
		text-align: right;
	}
	div.right {
		position: absolute;
		right: 0;
	}
	div.meh .medal {
		margin: 0 40px;
	}
	div.fancy {
		position: relative;
		display: flex;
		flex-direction: row;
		align-items: center;
		width: 100%;
	}
	div h1 {
		max-width: 30vw;
		font-size: calc(2.75vw + 20px);
		overflow: hidden;
		text-overflow:ellipsis;

	}
	div.medal {
		margin: 0 50px;
		width: 10vw;
		height: 10vw;
		border-radius: 450px;
		color: #000;
		background-image: url("/skin.png");
		background-repeat: no-repeat;
		background-size: cover;
		background-color: rgba(195, 219, 197, 0.5);
	}
</style>
